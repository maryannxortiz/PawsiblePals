
@{
    ViewData["Title"] = "Home Page";
    //
}
<link href="~/css/site.css" rel="stylesheet" />


<div class="text-center">
    <br />
    <h1 class="display-4">Pawsible Pals</h1>

    <h4>Adoptions | Community | Advocacy</h4>
    <br />
</div>

<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner">
        <div class="carousel-item">
            <img src="~/IMG/HomeCarousel/ThreeRetrievers.png" height="600" width="1200" />
            <div class="carousel-caption d-none d-md-block">
                <h5>Three is a party!</h5>
                <p>Join our community and keep connected! The pawsibilities are endless.</p>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/IMG/HomeCarousel/TabbyLandscape.png" height="600" width="1200" />
            <div class="carousel-caption d-none d-md-block">
                <h5>Every pal is unique!</h5>
                <p>Learn more about each pal and how you can help your pal migle with potencial adopters.</p>
            </div>
        </div>

        <div class="carousel-item active">
            <img src="~/IMG/HomeCarousel/Cookiepug.png" height="600" width="1200" />
            <div class="carousel-caption d-none d-md-block">
                <h5>Wish you could give more?</h5>
                <p>Give us a hand with a small <a href="/home/Donations#Cookies4pugs">donation</a>.</p>
            </div>
        </div>

    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container">
    <div class="row">
        <div class="col-4  text-center">
            <p>
                Come Join!
                <br />
                Join Our Community!
                <br />
                Be a Pet Advocate!
                <br />
                Change Your Life Forever – Adopt!
            </p>
                        <input type="button" value="Sign Up!" />
                    </div>
        <div class="col-4">
            <style>
                .line {
                    border-left: 3px solid black;
                    height: 150px;
                }
            </style>
            <div class="line"></div>
        </div>

        <div class="col-4  text-center">
            <p>
                Help with the upkeep of this site!
                <br />
                Donate!
                <br />
                Change is only a click away!
            </p>
            <br />
            <input type="button" value="Donate!" />
        </div>
    </div>
</div>

